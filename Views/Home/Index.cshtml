@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="text-center">
    <h1 class="display-4">Welcom to the Dojo Activity Center</h1>
    <div class="warper">
        <div class="form">
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div class="col-md-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" /> <br />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" /> <br />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" /> <br />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Confirm"></label>
                    <input asp-for="Confirm" /> <br />
                    <span asp-validation-for="Confirm"></span>
                </div>
                <button type="submit" class="btn-primary">Register</button>
            </form>
        </div>
        <div class="form">
            <partial name="LoginPartial.cshtml"></partial>
        </div>
    </div>
</div>